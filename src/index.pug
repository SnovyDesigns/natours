//- PUG INCLUDES
include ./includes/main

//- PAGE DATA
- const sectionFeaturesData = require("./js/data/sectionFeaturesData.js");
- const sectionToursData = require("./js/data/sectionToursData.js");
- const sectionStoriesData = require("./js/data/sectionStoriesData.js");
- const sectionBookData = require("./js/data/sectionBookData.js");
- const popupData = require("./js/data/popupData.js");

//- -----------------------------------

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Natours | Exciting tours for adventurous people
    link(href='https://fonts.googleapis.com/css?family=Lato:100,300,400,700,900&display=swap', rel='stylesheet')
  body
    //- Used only to set gradients to svg icons
    +svg-horizontal-gradient
    
    .navigation
      input(type="checkbox")#navi-toggle.navigation__checkbox
      label(for="navi-toggle").navigation__button
        span.navigation__icon
      .navigation__bg
      nav.navigation__nav
        ul.navigation__list
          for item, index in [{title: 'About Natours', href: '#section-about'},{title: 'Your benefits', href: '#section-features'},{title: 'Popular tours', href: '#section-tours'},{title: 'Stories', href: '#section-stories'},{title: 'Book now', href: '#section-book'}] 
            li.navigation__item
              a.navigation__link(href=`${item.href}`)
                span 0#{index+1}
                | #{item.title}

    header.header
      +svg-logo('header__logo')
      .header__text-box
        h1.heading-primary
          span.heading-primary--main.header__main-heading Outdoors
          span.heading-primary--sub.header__sub-heading is where life happens
        a(href="#section-tours").btn.btn--white.header__btn Discover our tours
    
    main
      section#section-about.section-about
        .container
          .u-text-center.u-margin-bottom-big
            h2.heading-secondary.section-about__main-heading Exciting tours for adventurous people
          .about-grid
            .text-wrapper
              h3.heading-tertiary.u-margin-bottom-small.section-about__sub-heading You're going to fall in love with nature
              p.paragraph.section-about__paragraph Lorem ipsum dolor sit amet consectetur adipisicing elit. Qui eveniet deleniti eius velit ducimus nisi! Quia natus mollitia odio deleniti consectetur! Dolor, eos. 
              h3.heading-tertiary.u-margin-bottom-small.section-about__sub-heading Live adventures like you never have before
              p.paragraph.section-about__paragraph Lorem ipsum dolor sit amet, consectetur adipisicing elit. Veniam itaque nisi molestias cum?
              a(href="#").btn-text.section-about__link Learn more &rarr;
            .composition
              .composition__photo.composition__photo--ph1
                img(src=require("./img/nat-1-large.jpg"), alt="Composition photo")
              .composition__photo.composition__photo--ph2
                img(src=require("./img/nat-2-large.jpg"), alt="Composition photo")
              .composition__photo.composition__photo--ph3
                img(src=require("./img/nat-3-large.jpg"), alt="Composition photo")
      
      section#section-features.section-features
        .container
          .features-grid
            for data in sectionFeaturesData
              +feature-box(data)
            
      section#section-tours.section-tours
        .container
          .u-text-center.u-margin-bottom-big
            h2.heading-secondary.section-tours__main-heading Most popular tours
          .tours-grid
            for data, index in sectionToursData
              +card(data, index)
          .u-text-center.u-margin-top-huge
            a(href="#", title="title").btn.btn--green.section-tours__btn Discover all tours 
      
      section#section-stories.section-stories
        +bg-video('video')
        .container
          .u-text-center.u-margin-bottom-big
            h2.heading-secondary.section-stories__main-heading We make people genuinely happy
          for data in sectionStoriesData
              +story(data)
          .u-text-center.u-margin-top-huge
            a(href="#").btn-text Read all stories &rarr; 

      section#section-book.section-book
        .container
          .book
            .book__form.section-book__form
              +form(sectionBookData, 'Start booking now!')
              
    footer.footer
      .container
        .footer__logo-box.u-margin-bottom-big
          +svg-logo('footer__logo')
          p.footer__logo-text Natours
        .footer__flex-wrapper
          .footer__navigation
            ul.footer__list
              for item in ['Company','Contact us','Carrers','Privacy policy','Terms']
                li.footer__item
                  a.footer__link(href="#")= item
          p.footer__copyright 
            | Layout by Jonas Schmedtmann
            br
            | Coding by SnovyDesigns

    //- +popup(popupData)
